<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen del perro -->
        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/image_background_shape" />

        <!-- Nombre del perro -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDogName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dog Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/leaguespartan"
            android:fontVariationSettings="'wght' 700"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@id/backgroundImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvDogBreed" /> <!-- Agregamos restricción para separación -->

        <!-- Raza del perro -->
        <TextView
            android:id="@+id/tvDogBreed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dog Breed"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/backgroundImageView"
            app:layout_constraintTop_toBottomOf="@id/tvDogName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvDogAge" /> <!-- Agregamos separación entre raza y edad -->

        <!-- Edad del perro -->
        <TextView
            android:id="@+id/tvDogAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2 years old"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/backgroundImageView"
            app:layout_constraintTop_toBottomOf="@id/tvDogBreed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- ProgressBar para la imagen -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/backgroundImageView"
            app:layout_constraintBottom_toBottomOf="@id/backgroundImageView"
            app:layout_constraintStart_toStartOf="@id/backgroundImageView"
            app:layout_constraintEnd_toEndOf="@id/backgroundImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
